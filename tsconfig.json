{
  "compilerOptions": {
    // 编译目标版本 - 支持旧版浏览器
    "target": "es5",

    // 包含的库文件 - DOM API 和 ES6+ 特性
    "lib": ["dom", "dom.iterable", "esnext"],

    // 允许编译 JavaScript 文件
    "allowJs": true,

    // 跳过声明文件的类型检查，提高编译速度
    "skipLibCheck": true,

    // 启用 ES 模块互操作性
    "esModuleInterop": true,

    // 允许从没有默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,

    // 启用所有严格类型检查选项
    "strict": true,

    // 强制文件名大小写一致
    "forceConsistentCasingInFileNames": true,

    // 防止 switch 语句中的 case 贯穿
    "noFallthroughCasesInSwitch": true,

    // 模块系统 - 使用 ES 模块
    "module": "esnext",

    // 模块解析策略 - Node.js 风格
    "moduleResolution": "node",

    // 允许导入 JSON 文件
    "resolveJsonModule": true,

    // 确保每个文件都是模块
    "isolatedModules": true,

    // 不生成输出文件（由 webpack 处理）
    "noEmit": true,

    // JSX 转换模式 - React 17+ 的新 JSX 转换
    "jsx": "react-jsx",

    // 基础目录 - 用于解析非相对模块名
    "baseUrl": ".",

    // 路径别名配置 - 简化导入路径
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  // 包含的文件和目录
  "include": ["src"]
}
